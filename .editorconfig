# top-most EditorConfig file
root = true

# All files
[*]
trim_trailing_whitespace = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# All proto files
[*.proto]
indent_style = space
indent_size = 2

# All xml files
[*.xml]
indent_style = tab
indent_size = 4
