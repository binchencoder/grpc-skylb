set -e

base_dir="$(dirname "$0")/.."
lib_dir="$base_dir/lib"
lib_dir_development="$base_dir/target/serverlib"
if [ ! -e "$lib_dir" -a -e "$lib_dir_development" ]; then
	lib_dir="$lib_dir_development"
fi

SERVER_NAME='echoserver'
START_JAR=`ls -F $lib_dir | grep -i $SERVER_NAME | grep .jar$`

SIGNAL=${SIGNAL:-TERM}
PIDS=$(ps ax | grep -i "$START_JAR" | grep java | grep -v grep | awk '{print $1}')

if [ -z "$PIDS" ]; then
  echo "No echo server to stop"
  exit 1
else
  kill -s $SIGNAL $PIDS
  echo "Stoped echo server PID [$PIDS]"
fi